@page
@model LoginModel

@{
    // ViewData["Title"] = "Log in";
}
<head>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/logins/login-9/assets/css/login-9.css" asp-append-version="true">
</head>
<div class="row">
    <div class="col-md-12">
        <section class="bg-primary py-3 py-md-5 py-xl-8">
            <form id="account" method="post">
                <div class="container">
                    <div class="row gy-4 align-items-center">
                        <div class="col-12 col-md-6 col-xl-7">
                            <div class="d-flex justify-content-center text-bg-primary">
                                <div class="col-12 col-xl-9">
                                    <h3>Staff Scroll</h3>
                                    @* <img class="img-fluid rounded mb-4" loading="lazy" src="~/assets/img/logo-staffscroll.png" width="245" height="80" alt="BootstrapBrain Logo"> *@
                                    <hr class="border-primary-subtle mb-4">
                                    <h2 class="h1 mb-4">Empower Your Workforce, One Scroll at a Time</h2>
                                    <p class="lead mb-5">Easily manage employee records, track attendance, and handle leave requests with our intuitive and user-friendly interface</p>
                                    <div class="text-endx">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-grip-horizontal" viewBox="0 0 16 16">
                                            <path d="M2 8a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm3 3a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm0-3a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-xl-5">
                            <div class="card border-0 rounded-4">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-4">
                                                <h3>Sign in</h3>
                                                @* <p>Don't have an account? <a href="#!">Sign up</a></p> *@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row gy-3 overflow-hidden">
                                        <div class="col-12">
                                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                                <label asp-for="Input.Email" class="form-label">Email</label>
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                                <label asp-for="Input.Password" class="form-label">Password</label>
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="checkbox mb-3">
                                                <label asp-for="Input.RememberMe" class="form-label">
                                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end mt-4">
                                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
